let g:vo_modules_load = "checkbox"
let g:vo_modules_load .= ':smart_paste'
setlocal foldcolumn=5

" Using the localColorScheme plugin
let b:colors_name='vo_dark'

" Tab Indentation
vmap <buffer> <Tab> >
vmap <buffer> <S-Tab> <
nmap <buffer> <Tab> mp>>`pl
nmap <buffer> <S-Tab> mp<<`ph
imap <buffer> <Tab> <C-T>
imap <buffer> <S-Tab> <C-D>

" Simplified checkbox mappings
let b:checkbox='off'
nmap <buffer> <C-X> ,,cx
nmap <silent> <buffer> <Leader>= :let b:checkbox = ( b:checkbox == 'on' ? 'off' : 'on' )<CR>:let b:checkbox<CR>

function! MaybeCBLine()
  if b:checkbox == 'on'
    normal ,,cp,,cz
  endif
endfunction

nmap <buffer> o o-<ESC>:call MaybeCBLine()<CR>A<BS>
imap <buffer> <Return> <Return>-<ESC>:call MaybeCBLine()<CR>A<BS>

" These mappings are overridding my mappings. :-(
unmap <buffer>   <C-K>
unmap <buffer>   <C-N>

" vim:ft=vim
