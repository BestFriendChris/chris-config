alias ls="ls -FG"
alias la="ls -a"
alias ll="ls -lh"
alias lla="ll -a"

alias treep="tree -Fn"
alias tree="tree -FC"
alias tr="tree"
alias tra="tree -a"
alias trl="tree -h"

alias df="df -h"
function dus { du -s $* | sort -n }
alias du="du -sh"
alias dirs='dirs -v'

alias grep="grep -v grep|grep"
alias g="grep --color"
alias p="ps aux|g "

alias rsync="rsync -ahOP --exclude=.DS_Store"
alias dry-rsync="rsync --dry-run"

alias cdh='cd "$(hg root)"'
alias cdg='cd "$(git root)"'

alias vdiff='gvim -c "set ft=diff" -'
alias vhg='gvim -c "set ft=hg-log" -'
function vman { gvim -c "Man $1" }
alias run-help=vman

# Extra mercurial-queues commands
alias mq='hg -R "$(hg root)/.hg/patches"'
alias mq-edit='gvim "$(hg root)/.hg/patches/series"'

# vim:ft=zsh
